<?xml version="1.0" encoding="utf-8"?>
<factor.labs.indiancalendar.CalendarUI.RippleViewLib.RippleView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:padding="3dp"
    ripple:rv_type="rectangle"
    ripple:rv_color="@color/Grey400"
    android:id = "@+id/calendar_ripple_view"
    android:background="@color/bg_white">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id = "@+id/calendar_list_slider_item_holder"
        android:background="@color/bg_white">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:clickable="false"
            android:id="@+id/calendar_icon_slider_item"
            android:src="@drawable/ic_calendar_blank_white_36dp"
            android:focusable="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Slider Menu Item"
            android:layout_gravity="center"
            android:layout_weight="10"
            android:gravity="center|start"
            android:id="@+id/calendar_slider_item_textview"
            android:textColor="@color/Black"
            android:textStyle="bold|normal"
            android:focusable="false"
            android:textSize="18dp" />

    </LinearLayout>
</factor.labs.indiancalendar.CalendarUI.RippleViewLib.RippleView>