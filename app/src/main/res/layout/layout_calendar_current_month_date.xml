<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="40dp"
    android:layout_height="40dp"
    android:padding="2dp"
    android:background="@color/bg_white"
    android:id="@+id/calendar_current_month_date_holder">
    <Button
        android:layout_width="match_parent"
        android:layout_height="27.5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CurrentMonthDate"
        android:id="@+id/calendar_current_month_date"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:gravity="center|bottom"
        android:textAlignment="center"
        android:textColor="@color/primary_text"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="12.5dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center|top"
        android:id="@+id/calendar_current_date_events_notify"
        android:layout_weight="1" >
    </LinearLayout>

</LinearLayout>