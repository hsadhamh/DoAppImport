<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/id_cal_action_bar"
        layout="@layout/layout_calendar_action_bar" />

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/id_cal_schedule_tabs"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:background="@color/primary"
        android:textColorPrimary = "@color/primary_material_light"
        app:pstsTabTextAllCaps = "true"
        app:pstsTabTextStyle = "bold|normal"
        app:pstsTabTextSize = "15sp"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/id_cal_schedule_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>