<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="40dp"
    android:layout_height="40dp"
    android:padding="1dp"
    android:id="@+id/calendar_prevnext_month_date_holder">

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PrevMonthDate"
        android:id="@+id/calendar_prevnext_month_date"
        android:layout_gravity="center"
        android:background="@color/bg_white"
        android:gravity="center"
        android:textAlignment="gravity"
        android:textColor="@color/secondary_text_light"
        android:textSize="12sp"
        android:textStyle="bold|italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:id="@+id/calendar_current_date_events_notify">

    </LinearLayout>

</LinearLayout>