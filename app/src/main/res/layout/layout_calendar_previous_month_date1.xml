<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="32dp"
    android:layout_height="32dp"
    android:padding="1dp"
    android:background="@color/primary"
    android:layout_gravity="center"
    android:gravity="center"
    android:id="@+id/calendar_prevnext_month_date_holder">

    <factor.labs.indiancalendar.CalendarUI.DayOnViews.ExtendedTextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PrevMonthDate"
        android:id="@+id/calendar_prevnext_month_date"
        android:layout_gravity="center"
        android:background="@color/primary"
        android:gravity="center"
        android:textColor="@color/secondary_text_light"
        android:textSize="13sp"
        android:textStyle="bold|normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@color/primary"
        android:id="@+id/calendar_current_date_events_notify">

    </LinearLayout>

</LinearLayout>