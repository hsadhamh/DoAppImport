<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="32dp"
    android:layout_height="32dp"
    android:padding="1dp"
    android:background="@color/primary"
    android:layout_gravity="center"
    android:gravity="center"
    android:id="@+id/calendar_current_month_date_holder">

    <factor.labs.indiancalendar.CalendarUI.DayOnViews.ExtendedTextView
        android:layout_width="match_parent"
        android:layout_height="24.5dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CurrentMonthDate"
        android:id="@+id/calendar_current_month_date"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:gravity="center|bottom"
        android:textColor="@color/icons"
        android:textSize="15sp"
        android:textStyle="bold|normal"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="7.5dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@android:color/transparent"
        android:id="@+id/calendar_current_date_events_notify"
        android:layout_weight="1" >
    </LinearLayout>

</LinearLayout>