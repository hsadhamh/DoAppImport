<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:weightSum="1"

    android:background="@color/primary_light"
    android:id="@+id/calendar_about_us_holder"
    android:padding="2dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="OUR TEAM"
        android:gravity="center_horizontal"
        android:textSize="35sp"
        android:textColor="@color/secondary_text"
        android:padding="5dp"
        android:id="@+id/textView2"
        android:layout_alignParentTop="false"
        android:layout_marginTop="20dp" />
    <factor.labs.indiancalendar.CalendarUI.CalendarCircularImageView.CircularImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/calendar_about_us_image_a"
        android:src="@drawable/dexter"
        android:layout_gravity="center_horizontal"
        android:padding="2dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="A YASEEN"
        android:id="@+id/calendar_about_us_name_a"
        android:gravity = "left"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.15"
        android:textStyle="bold|normal"
        android:textSize="30sp"
        android:textColor="@color/primary_text"
        android:layout_below="@+id/calendar_about_us_image_a"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp" />

    <factor.labs.indiancalendar.CalendarUI.CalendarCircularImageView.CircularImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/calendar_about_us_image_s"
        android:gravity = "center"
        android:src="@drawable/dexter"
        android:layout_gravity="center_horizontal"

        android:padding="2dp"
        android:layout_above="@+id/calendar_about_us_name_a"
        android:layout_alignRight="@+id/calendar_about_us_name_a"
        android:layout_alignEnd="@+id/calendar_about_us_name_a"
        android:layout_marginRight="40dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="S HASSAN"
        android:id="@+id/calendar_about_us_name_s"
        android:gravity = "right"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.15"
        android:textStyle="bold|normal"
        android:textSize="30sp"
        android:textColor="@color/primary_text"
        android:layout_below="@+id/calendar_about_us_image_a"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp" />

</RelativeLayout>